# Database
DATABASE_URL=postgresql://riftcounter:riftcounter@localhost:5432/riftcounter

# Redis
REDIS_URL=redis://localhost:6379
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600

# Server
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# CORS
CORS_ORIGINS=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Data Refresh
ENABLE_SCHEDULED_REFRESH=true
REFRESH_INTERVAL_HOURS=24
REFRESH_CRON_SCHEDULE=0 4 * * *

# Source Weights (higher = more trusted)
SOURCE_WEIGHTS={"WildRiftFire":1.0,"WR-META":0.9,"WildRiftGuides":0.8}

# Feature Flags
FEATURE_FUZZY_SEARCH=true
FEATURE_COUNTER_PICKS=true
FEATURE_BUILD_AGGREGATION=true

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001
